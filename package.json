{
  "name": "electron-webtorrent-browser",
  "version": "1.0.0",
  "description": "Production-ready Electron browser with WebTorrent support",
  "main": "dist-electron/main.js",
  "type": "module",
  "homepage": ".",
  "scripts": {
    "dev": "vite",
    "build": "vite build && electron-builder",
    "preview": "vite preview",
    "electron": "wait-on tcp:5173 && cross-env IS_DEV=true electron .",
    "electron:pack": "electron-builder",
    "electron:dev": "concurrently \"npm run dev\" \"npm run electron\"",
    "electron:preview": "npm run build && electron .",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "lint": "eslint src --ext .js,.svelte",
    "lint:fix": "eslint src --ext .js,.svelte --fix",
    "test": "vitest",
    "security-audit": "npm audit && electron-builder install-app-deps",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^3.0.0",
    "@tsconfig/svelte": "^5.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-notarize": "^1.2.2",
    "eslint": "^8.57.0",
    "eslint-plugin-svelte": "^2.35.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.0",
    "postcss": "^8.4.32",
    "svelte": "^4.2.7",
    "svelte-check": "^3.6.0",
    "tailwindcss": "^3.3.6",
    "tslib": "^2.4.1",
    "typescript": "^5.0.0",
    "vite": "^5.0.3",
    "vitest": "^1.0.0",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "webtorrent": "^2.3.0",
    "wrtc": "^0.4.7",
    "parse-torrent-file": "^4.1.0",
    "magnet-uri": "^7.0.5",
    "lucide-svelte": "^0.263.1",
    "mime-types": "^2.1.35",
    "sanitize-html": "^2.11.0",
    "validator": "^13.11.0"
  },
  "build": {
    "appId": "com.webtorrentbrowser.app",
    "productName": "WebTorrent Browser",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "assets/",
        "to": "assets/",
        "filter": ["**/*"]
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "hardenedRuntime": true,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "notarize": {
        "teamId": "YOUR_TEAM_ID"
      }
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        }
      ],
      "certificateFile": "path/to/certificate.p12",
      "certificatePassword": "certificate_password",
      "publisherName": "Your Company Name"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        }
      ],
      "category": "Network"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "protocols": [
      {
        "name": "Magnet Link",
        "schemes": ["magnet"]
      }
    ]
  },
  "lint-staged": {
    "*.{js,svelte}": [
      "eslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test && npm run security-audit"
    }
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/electron-webtorrent-browser.git"
  },
  "keywords": [
    "electron",
    "webtorrent",
    "browser",
    "p2p",
    "torrent",
    "svelte"
  ],
  "author": {
    "name": "Your Name",
    "email": "your.email@example.com"
  },
  "license": "MIT"
}