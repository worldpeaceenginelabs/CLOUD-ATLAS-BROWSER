{
  "name": "CLOUD-ATLAS-BROWSER",
  "version": "1.0.0",
  "description": "Electron browser with WebTorrent support",
  "main": "electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build && electron-builder",
    "preview": "vite preview",
    "electron": "wait-on tcp:5173 && cross-env IS_DEV=true electron .",
    "electron:dev": "concurrently \"npm run dev\" \"npm run electron\"",
    "electron:preview": "npm run build && electron ."
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^5.0.4",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.0",
    "cross-env": "^7.0.3",
    "electron": "^36.2.0",
    "electron-builder": "^25.1.8",
    "svelte": "^5.34.7",
    "tailwindcss": "^3.4.17",
    "vite": "^6.3.5",
    "wait-on": "^8.0.1"
  },
  "dependencies": {
    "webtorrent": "^2.6.8",
    "lucide-svelte": "^0.523.0"
  },
  "build": {
    "appId": "com.webtorrentbrowser.app",
    "productName": "WebTorrent Browser",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "node_modules/**/*"
    ],
    "protocols": [
      {
        "name": "Magnet Link",
        "schemes": ["magnet"]
      }
    ]
  }
}