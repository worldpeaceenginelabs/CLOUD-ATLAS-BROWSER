{
  "name": "electron-webtorrent-browser",
  "version": "1.0.0",
  "description": "Production-ready Electron browser with WebTorrent support",
  "main": "electron/main.js",
  "type": "module",
  "homepage": ".",
  "scripts": {
    "dev": "vite",
    "build": "vite build && electron-builder",
    "preview": "vite preview",
    "electron": "wait-on tcp:5173 && cross-env IS_DEV=true electron .",
    "electron:pack": "electron-builder",
    "electron:dev": "concurrently \"npm run dev\" \"npm run electron\"",
    "electron:preview": "npm run build && electron .",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "lint": "eslint src --ext .js,.svelte",
    "lint:fix": "eslint src --ext .js,.svelte --fix",
    "test": "vitest",
    "security-audit": "npm audit && electron-builder install-app-deps",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^5.0.4",
    "@tsconfig/svelte": "^5.0.2",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.0",
    "cross-env": "^7.0.3",
    "electron": "^36.2.0",
    "electron-builder": "^25.1.8",
    "@electron/notarize": "^2.5.0",
    "eslint": "^9.17.0",
    "eslint-plugin-svelte": "^2.46.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.3.0",
    "postcss": "^8.4.47",
    "svelte": "^5.34.7",
    "svelte-check": "^4.0.8",
    "tailwindcss": "^3.4.17",
    "tslib": "^2.8.1",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vitest": "^2.1.8",
    "wait-on": "^8.0.1"
  },
  "dependencies": {
    "webtorrent": "^2.6.8",
    "parse-torrent": "^11.0.17",
    "magnet-uri": "^7.0.7",
    "lucide-svelte": "^0.523.0",
    "mime-types": "^2.1.35",
    "sanitize-html": "^2.13.1",
    "validator": "^13.12.0"
  },
  "overrides": {
    "esbuild": "^0.25.5",
    "ip": "^2.0.1"
  },
  "build": {
    "appId": "com.webtorrentbrowser.app",
    "productName": "WebTorrent Browser",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        }
      ],
      "category": "Network"
    },
    "protocols": [
      {
        "name": "Magnet Link",
        "schemes": ["magnet"]
      }
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/electron-webtorrent-browser.git"
  },
  "keywords": [
    "electron",
    "webtorrent",
    "browser",
    "p2p",
    "torrent",
    "svelte"
  ],
  "author": {
    "name": "Your Name",
    "email": "your.email@example.com"
  },
  "license": "MIT"
}